      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .login-box {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.2);
      width: 300px;
      text-align: center;
    }
    input {
      width: 90%;
      padding: 8px;
      margin: 10px 0;
    }
    button {
      padding: 10px;
      width: 100%;
      background: #0073e6;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .captcha {
      margin: 10px 0;
      background: #eee;
      padding: 10px;
      font-family: monospace;
      font-size: 18px;
      user-select: none;
    }
    .error {
      color: red;
      margin-top: 10px;
    }
